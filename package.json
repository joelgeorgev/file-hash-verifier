{
  "name": "file-hash-verifier",
  "version": "1.0.0",
  "description": "A react app to generate and verify cryptographic hash values of files.",
  "dependencies": {
    "clipboard-copy": "^4.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.2",
    "redux": "^4.2.0",
    "redux-saga": "^1.2.1",
    "styled-components": "^5.3.5"
  },
  "devDependencies": {
    "@stryker-mutator/core": "^9.5.1",
    "@stryker-mutator/vitest-runner": "^9.5.1",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "^18.0.18",
    "@types/react-dom": "^18.0.6",
    "@types/styled-components": "^5.1.26",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^4.0.18",
    "gh-pages": "^5.0.0",
    "jsdom": "^28.1.0",
    "oxlint": "^1.50.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "check": "npm run check:format && npm run check:types && npm run check:lint",
    "check:format": "prettier --check \"./**/*.{html,ts,tsx,json,yml,md}\"",
    "check:types": "tsc",
    "check:types:watch": "npm run check:types -- --watch",
    "check:lint": "oxlint",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:mutation": "stryker run",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "repository": "https://github.com/joelgeorgev/file-hash-verifier",
  "keywords": [
    "typescript",
    "React",
    "reactjs",
    "file",
    "hash",
    "checksum",
    "digest",
    "integrity",
    "verifier",
    "crypto",
    "sha1",
    "sha256",
    "sha384",
    "sha512"
  ],
  "author": "Joel George V",
  "homepage": "https://verify.joelgeorgev.dev",
  "license": "MIT"
