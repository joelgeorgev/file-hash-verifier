{
  "name": "file-hash-verifier",
  "version": "1.0.0",
  "description": "A react app to generate and verify cryptographic hash values of files.",
  "dependencies": {
    "clipboard-copy": "^4.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.3",
    "redux": "^4.1.1",
    "redux-saga": "^1.1.3",
    "styled-components": "^5.3.1"
  },
  "devDependencies": {
    "@testing-library/react": "^12.0.0",
    "@types/jest": "^27.0.1",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@types/styled-components": "^5.1.14",
    "gh-pages": "^3.2.3",
    "prettier": "^2.3.2",
    "react-scripts": "^4.0.3",
    "typescript": "^4.4.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "compile": "tsc",
    "compile:watch": "tsc --watch",
    "format": "prettier --check \"./**/*.{ts,tsx,json,yml,md}\"",
    "test": "react-scripts test",
    "test:coverage": "npm test -- --coverage",
    "eject": "react-scripts eject",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/index.tsx",
      "!src/utils/getFileReader.ts",
      "!src/utils/getCrypto.ts"
    ],
    "displayName": "File Hash Verifier",
    "resetMocks": true,
    "resetModules": true,
    "restoreMocks": true
  },
  "repository": "https://github.com/joelgeorgev/file-hash-verifier",
  "keywords": [
    "typescript",
    "React",
    "reactjs",
    "file",
    "hash",
    "checksum",
    "digest",
    "integrity",
    "verifier",
    "crypto",
    "sha1",
    "sha256",
    "sha384",
    "sha512"
  ],
  "author": "Joel George V",
  "homepage": "https://verify.joelgeorgev.dev",
  "license": "MIT",
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
